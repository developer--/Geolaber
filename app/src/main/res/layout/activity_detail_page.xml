<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.awesomethings.geolaber.ui.activities.DetailPageActivity">

    <android.support.v7.widget.Toolbar
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/sliderViewPager_Id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_aspectRatio="178%"
            app:layout_widthPercent="100%"
            >

        </android.support.v4.view.ViewPager>

        <com.awesomethings.geolaber.ui.custom.CTextView
            android:id="@+id/geolaberNameTextView_Id"
            android:layout_margin="15dp"
            android:layout_below="@id/sliderViewPager_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </android.support.percent.PercentRelativeLayout>



</LinearLayout>
